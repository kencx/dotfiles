#!/bin/bash

# quick access to pdf notes

FILEPATH="$HOME/notes"
EXTENSION="pdf"
READER="zathura"

FILE=$(fd . --extension "$EXTENSION" --type f "$FILEPATH" | \
    fzf --ansi --cycle \
    --delimiter='/' \
    --with-nth=-1 \
	--layout=reverse \
    --margin=5% \
    --prompt="notes > "
)

if [ -n "$FILE" ]; then
	"$READER" "$FILE" &
fi
