#!/bin/bash

# displays music player status

PLAYER="spotifyd"

if [ -z $(playerctl -l | grep $PLAYER) ]; then
    echo "spotify offline"

elif [ "$(playerctl -p $PLAYER status)" == "Paused" ]; then
    playerctl -p $PLAYER metadata \
        --format ' {{ title }} - {{ artist }}'

elif [ "$(playerctl -p $PLAYER status)" == "Playing" ]; then
    playerctl -p $PLAYER metadata \
        --format '契 {{ title }} - {{ artist }}'

else
    echo "spotify stopped"
fi

