#!/bin/bash

# listing sxhkdrc keybindings with fzf

awk '/^[a-zA-Z{]/ && last {print $0,"\t",last} {last=""} /^#/{last=$0}' \
    ~/.config/sxhkd/sxhkdrc | column -t -s $'\t' | \

    fzf --tac --cycle \
        --layout=reverse \
        --border=rounded \
        --margin=1 \
        --padding=1 \
        --prompt='keys > ' \
        --ansi

