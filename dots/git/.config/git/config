[color]
	status = true
	branch = true
	diff = auto
[color "status"]
	added = yellow
	changed = green
	untracked = red
[log]
    date = short
[commit]
    verbose = true
[fetch]
    prune = true
[grep]
    lineNumber = true
    extendedRegexp = true
[diff]
    renames = copies
    tool = nvimdiff
[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[alias]
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''%C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
[pull]
	ff = only
[merge]
	ff = only
[url "git@github.com:"]
    insteadOf = https://github.com/
    insteadOf = "gh:"
    pushInsteadOf = "gh:"
[url "https://aur.archlinux.org/"]
    insteadOf = "aur:"

