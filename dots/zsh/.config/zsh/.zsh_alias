# git
unalias gd; unalias gl; unalias gb;

function gd {
    git diff --name-only | fzf --ansi --prompt='diff > ' --preview='git diff --color $@ -- {-1}'
}

function gl {
    git show "$(git log --pretty='%h %s' | fzf --prompt='log > ' --preview='git show --color {1}' | cut -d ' ' -f1)"
}

function gb {
    git checkout "$(git branch | fzf)"
}

function lm {
  cd "$(llama "$@")"
}

function scr {
	scrot $HOME/Pictures/Screenshots/%b%d-%H:%M:%S.png "$@"
	notify-send "Screenshot taken"
}

# turn on/off wireguard client
function wgon {
	ssh pi "wgc -o"
}

function wgoff {
	ssh pi "wgc -f"
}

