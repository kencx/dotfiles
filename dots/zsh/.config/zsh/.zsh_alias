}

# git
unalias gd; unalias gl; unalias gb; unalias glg;
unalias gm;

function gd {
    git diff --name-only | fzf --ansi --prompt='diff > ' --preview='git diff --color $@ -- {-1}'
}

function gl {
    git log --pretty='%h %s' | fzf --prompt='log > ' --preview='git show --color {1}' | cut -d ' ' -f1 | xargs git show
}

function gb {
    git branch | fzf --prompt='branch > ' | xargs git checkout
}

function glg {
	git log --all --graph --oneline --decorate=short --pretty=oneline
}

function scr {
	scrot $HOME/Pictures/Screenshots/%b%d-%H:%M:%S.png "$@"
	notify-send "Screenshot taken"
}

function certcat {
    openssl x509 -text -noout -in "$1"
}

function cheat {
	curl cheat.sh/$1
}

# turn on/off wireguard client
function wgon {
	ssh pi "wgc -o"
}

function wgoff {
	ssh pi "wgc -f"
}

