# git
unalias gd; unalias gl; unalias gb;

gd() {
    git diff --name-only | fzf --ansi --prompt='diff > ' --preview='git diff --color $@ -- {-1}'
}

gl() {
    git show "$(git log --pretty='%h %s' | fzf --prompt='log > ' --preview='git show --color {1}' | cut -d ' ' -f1)"
}

gb() {
    git checkout "$(git branch | fzf)"
}


