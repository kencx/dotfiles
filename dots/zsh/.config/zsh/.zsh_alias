function clear_libvirt {
    sudo find /var/lib/libvirt/images -mtime +7
    printf >&2 '%s ' 'Confirm clear libvirt images? (y/n)'
    read ans
    echo
    if [[ $ans =~ ^[Yy]$ ]]; then
        sudo find /var/lib/libvirt/images -mtime +7 -exec rm -- '{}' \;
        echo "Libvirt images cleared"
    fi
}

