
# floating terminal
super + Return
	kitty

# tiled terminal
super + v
    kitty --class tiled

# neovim
super + d
    kitty --class dev nvim

# rofi
super + space
	rofi -show drun -width -100

# keybindings
super + slash
    kitty --class keys $HOME/bin/keybinds

# windows
super + semicolon
    rofi -show window -width -100

# bookmarks
# super + apostrophe

# bluetooth menu
super + shift + b
    $HOME/bin/rofi-bluetooth --show-menu

# wifi menu
super + shift + c
    $HOME/bin/nmcli-rofi

# mute volume
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

# volume control
XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}1000

# configs
super + z
    kitty --class configs $HOME/bin/configs

# toggle scratchpad
super + u
    $HOME/bin/scratchpad scratchpad

# todo tasks
super + apostrophe
    todofi.sh
#
# bspwm hotkeys
#

# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# toggle all windows between tiled and pseudo-tiled state
super + \
    bspc query -N -d focused | xargs -I node_id bspc node node_id -t {tiled,pseudo_tiled}

# toggle locked, sticky, private node flag
super + ctrl + {l,s,p}
	bspc node -g {locked,sticky,private} || \
    bspc node -g {locked=off,sticky=off,private=off}

# {hide, unhide} current window
# super + n : super + h
#    bspc node focused -g hidden=on

# super + n : super + shift + h
#    bspc node $(bspc query -N -d focused -n .hidden) -g hidden=off

# {hide, unhide} all windows
####

#
# focus/swap
#

# {focus, swap} the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# swap the current node and the biggest node
super + n : super + g
	bspc node -s biggest.local

# focus {next, prev} node
super + n : super + {n,p}
    bspc node -f {next,prev}.local.!hidden.window

# rotate nodes {clockwise, anti-clockwise}
super + n : super + {q,e}
    bspc node @/ -C {forward,backward}

# flip nodes vertically, horizontally
super + n : super + {_,shift + } f
    bspc node @/ -F {vertical, horizontal}

# {focus, send node to} {1-5} desktop
super + n : {_, super + } KP_{End,Down,Next,Left,Begin}
	bspc {desktop -f, node -d} '^{1-5}' --follow

# send all windows in current desktop to chosen desktop
####

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last desktop
super + Tab
	bspc desktop -f last

#
# preselect
#

# preselect the direction
super + p : super + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + p : super + space
	bspc node -p cancel

# move window to chosen preselection
super + shift + m
    bspc node -n last.!automatic

#
# move/resize
#

# super + r turns on resize mode. Esc to exit resize mode

# resize: expand window
super + e : {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# resize: contract window
super + e : shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move floating window
super + e : {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# equalize size
super + e : super + e
    bspc node @/ --equalize
