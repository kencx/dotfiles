
# terminal
super + Return
	kitty

# neovim
super + d
    kitty --class dev nvim

# rofi
super + space
	rofi -show drun

# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# keybindings
super + @slash
	~/bin/keybindings | rofi -dmenu -i -p "hotkeys"

# todo tasks
alt + t
       todofi.sh

# toggle scratchpad
super + u
    ~/bin/scratchpad.sh scratchpad

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# super + n turns on window mode

# toggle locked, sticky, private node flag
super + n : super + {l,s,p}
	bspc node -g {locked,sticky,private} || \
    bspc node -g {locked=off,sticky=off,private=off}

# {hide, unhide} current window
super + n : super + h
    bspc node focused -g hidden=on

super + n : super + shift + h
    bspc node $(bspc query -N -d focused -n .hidden) -g hidden=off

# {hide, unhide} all windows

# toggle all focused windows between floating and tiled state
super + n : super + f
    bspc query -N -d focused | xargs -I node_id bspc node node_id -t {floating,tiled}

#
# focus/swap
#

# move window to chosen node

# {focus, swap} the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# rotate nodes {clockwise, anti-clockwise}
super + shift + {d,a}
    bspc node @/ -C {forward,backward}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# {focus, send node to} {1-5} desktop
super + n : {_, super + } KP_{End,Down,Next,Left,Begin}
	bspc {desktop -f, node -d} '^{1-5}' --follow

# send all windows in current desktop to chosen desktop

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
# move/resize
#

# super + r turns on resize mode. Esc to exit resize mode

# resize: expand window
super + r : {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# resize: contract window
super + r : shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move floating window
super + r : {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# equalize size
super + e
    bspc node @/ --equalize
