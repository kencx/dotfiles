set shell bash
set shellopts '-eu'
set ifs "\n"

set scrolloff 10

cmd open ${{
  case $(file --mime-type $f -b) in
	text/*) $EDITOR $fx;;
	video/*) vlc $fx;;
	image/*) feh $fx;;
	application/pdf|application/epub*) setsid -f zathura $fx >/dev/null 2>&1;;
	*) for f in $fx; do setsid $OPENER $f > /dev/null 2> /dev/null & done;;
  esac
}}
